<form action="/user/wallet/<%= user.id %>/value" method="post">
    <div class="columns">
        <div class="column">
            <div class="field">
                <h3 style="font-size:4vw"><b>Add value</b></h3>
            </div>
            <div class="field">
                <div class="control">
                    <div>
                        <b>Value to be added:</b>
                        <input class="input" type="number" name="value" required>
                    </div>
                </div>
            </div>
            <div class="field">
                <div>
                    <button class="button is-link" type="submit">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>