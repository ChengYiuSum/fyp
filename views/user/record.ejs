<form action="/user/payment" method="post">
    <div class="column">
        <div class="field">
            <h3 style="font-size:4vw"><b>Summary</b></h3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Title</th>
                    <th>Store</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Total:</th>
                    <th>
                        $<%= total %>
                    </th>
                </tr>
            </tfoot>

            <% record.title.forEach( function(title) { %>
                <tbody>
                    <tr>
                        <td>
                            <%= list %>.
                        </td>
                        <td>
                            <%= title %>
                        </td>
                        <td>
                            <%= record.shop[count] %>
                        </td>
                        <td>
                            <%= record.price[count] %>
                        </td>
                    </tr>
                </tbody>
                <% count++; %>
                    <% list++; %>
                        <% }); %>

        </table>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-link is-pulled-right" type="submit" onclick="submit()">Confirm payment</button>
        </div>
    </div>
</form>